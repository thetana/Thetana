<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/asset14"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asset3" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/asset4" />

        <EditText
            android:id="@+id/join_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="로그인 할 이메일을 입력해 주세요."
            android:inputType="textEmailAddress"
            android:textColor="#33373D"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/enail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/asset6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asset7" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/asset9" />

        <EditText
            android:id="@+id/join_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="비밀번호를 입력해 주세요."
            android:inputType="textPassword"
            android:textColor="#33373D"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/asset6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asset7" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/asset9" />

        <EditText
            android:id="@+id/join_et_rePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="비밀번호를 재입력해 주세요."
            android:inputType="textPassword"
            android:textColor="#33373D"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pw0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/asset6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asset18" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/asset20" />

        <EditText
            android:id="@+id/join_et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="아이디를 입력해 주세요."
            android:inputType="textEmailAddress"
            android:textColor="#33373D"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/asset6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/asset19" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/asset21" />

        <EditText
            android:id="@+id/join_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="이름을 입력해 주세요."
            android:inputType="textPersonName"
            android:textColor="#33373D"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/asset6" />

    <ImageButton
        android:id="@+id/join_bt_join"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/asset10"
        android:scaleType="fitCenter"
        android:text="로그인"
        app:srcCompat="@drawable/asset5" />

</LinearLayout>